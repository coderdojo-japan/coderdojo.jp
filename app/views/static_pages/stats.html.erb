<section class="cover">
  <%= image_tag "coderdojo-stats_cover.png", class: "cursor-default" %>
</section>

<section class="dojos text-center grayscale-bg" id="dojos">
  <br>
  <h1>統計情報</h1>
  <h2>全国の道場</h2>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

  <% @regions_and_dojos.each_with_index do |(region, dojos), index| %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="<%= "heading#{index}" %>">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= "collapse#{index}" %>">
          <i class="fa fa-chevron-right" aria-hidden="true"></i>
          <%= region %> - <%= dojos.count %> Dojos
        </a>
      </h4>
    </div>
    <div id="<%= "collapse#{index}" %>" class="panel-collapse collapse" role="tabpanel">
      <div class="panel-body grayscale-bg">
        <%= render partial: 'dojo', collection: dojos %>
      </div>
    </div>
  </div>
  <% end %>

<br>
<h3>開催回数</h3>
<%= @sum_of_events %> 回

<h3>参加者数 (延べ)</h3>
<%= @sum_of_participants = EventHistory.sum(:participants) %> 人

<h3>計測対象</h3>
<%= @sum_of_dojos %> / <%= @dojo_count %> Dojos

<h3>実装詳細</h3>
<ul>
  <li><a href="https://github.com/coderdojo-japan/coderdojo.jp/issues/12">https://github.com/coderdojo-japan/coderdojo.jp/issues/12</a></li>
</ul>

</section>
